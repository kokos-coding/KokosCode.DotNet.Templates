{
  "$schema": "http://json.schemastore.org/template",
  "author": "Kokos Code TEam",
  "classifications": [ "WebApi", "Service" ], 
  "name": "Kokos Code WebApi service",
  "identity": "KokosCode.DotNet.WebApi",         
  "groupIdentity":"KokosCode.DotNet",
  "shortName": "webapiservice",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "preferNameDirectory": true,
  "sourceName": "DotNet.WebApi",
  "symbols":{
    "CopyrightName": {
      "type": "parameter",
      "defaultValue": "(c) Contoso",
      "replaces":"(copyright)"
    },
    "Title": {
      "type": "parameter",
      "defaultValue": "Contoso Sample",
      "replaces":"My App Title"
    },
    "EnableContactPage":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "ORM":{
      "type":"parameter",
      "datatype": "choice",
      "description": "What ORM to use",
      "defaultValue":"EFCore",
      "choices": [
        {
          "choice": "EFCore",
          "description": "Connect EFCore as main ORM system"
        },
        {
          "choice": "Dapper",
          "description": "Connect Dapper as main ORM system"
        }
      ],
      "replaces":"skyblue"
    }
  },
"sources": [
    {
      "modifiers": [
        {
          "condition": "(!EnableContactPage)",
          "exclude": [
            "contact.txt"
          ]
        }
      ]
    }
  ]
}